{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "eikkon/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "eikkon/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "eikkon/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "eikkon/multi-nginx",
            "essential": true,
            "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
            ],
            "links": ["client","server"]
        }

    ]
}